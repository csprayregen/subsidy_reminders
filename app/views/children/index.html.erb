<div class="page-header">
  <h1>
    Dashboard
    <a href="/children/new" class="btn btn-lg btn-success">New Child</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">


    <% @families.each do |family| %>

    <div>
      <h3><%= family.name %> Family</h3>
    </div>

    <table class="table table-striped table-hover">
      <tr>
        <th>Last name</th>
        <th>First name</th>
        <th>Last approval</th>
        <th>Approved thru</th>
        <th>Last denial</th>
        <th>Last submission</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% family.children.each do |child| %>
      <tr>
        <td><%= child.last_name %></td>
        <td><%= child.first_name %></td>
        <td><%= child.last_approval %></td>
        <td><%= child.approved_thru %></td>
        <td><%= child.last_denial %></td>
        <td><%= child.last_submission %></td>
        <td><%= child.notes %></td>
        <td>
          <a href="/children/<%= child.id %>" class="btn btn-primary">Child details</a>
          <a href="/children/<%= child.id %>/edit" class="btn btn-warning">Edit Child</a>
          <a href="/delete_child/<%= child.id %>" class="btn btn-danger" rel="nofollow">Delete Child</a>
        </td>
      </tr>
      <% end %>

    </table>
    <% end %>
  </div>
</div>
