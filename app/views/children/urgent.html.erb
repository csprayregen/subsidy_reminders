<div class="page-header">
  <h1>
    Urgent Updates
  </h1>
</div>

<h3>Due soon</h3>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Family Name</th>
        <th>Last name</th>
        <th>First name</th>
        <th>Last approval</th>
        <th>Approved thru</th>
        <th>Last denial</th>
        <th>Last submission</th>
        <th>Guardians</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @children.each do |child| %>
      <% if (child.approved_thru - @today) < 46 %>
      <tr>
        <td><%= child.family_id %></td>
        <td><%= child.last_name %></td>
        <td><%= child.first_name %></td>
        <td><%= child.last_approval %></td>
        <td><%= child.approved_thru %></td>
        <td><%= child.last_denial %></td>
        <td><%= child.last_submission %></td>
        <td><%= child.family.guardians %></td>
        <td><%= child.notes %></td>
        <td>
          <a href="/children/<%= child.id %>" class="btn btn-primary">Child details</a>
          <a href="/children/<%= child.id %>/edit" class="btn btn-warning">Edit Child</a>
          <a href="/delete_child/<%= child.id %>" class="btn btn-danger" rel="nofollow">Delete Child</a>
        </td>
      </tr>
      <% end %>
      <!-- if the approved through date is in less than 46 days, appear in the table -->

      <% end %>
    </table>
  </div>
</div>
