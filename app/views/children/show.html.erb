<div class="page-header">
  <h3>Child #<%= @child.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Last approval</dt>
      <dd><%= @child.last_approval %></dd>

      <dt>Approved thru</dt>
      <dd><%= @child.approved_thru %></dd>

      <dt>Last denial</dt>
      <dd><%= @child.last_denial %></dd>

      <dt>Last submission</dt>
      <dd><%= @child.last_submission %></dd>

      <dt>Notes</dt>
      <dd><%= @child.notes %></dd>

      <dt>Family</dt>
      <dd><%= @child.family_id %></dd>

      <dt>Provider</dt>
      <dd><%= @child.provider_id %></dd>

      <dt>First name</dt>
      <dd><%= @child.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @child.last_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/children" class="btn btn-primary">
        Back
      </a>
      <a href="/children/<%= @child.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_child/<%= @child.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
