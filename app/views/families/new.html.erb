<!-- Validation failure messages -->
<% if @family.errors.any? %>
  <% @family.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Family</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_family" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for provider_id -->
      <div class="form-group">

        <input type="hidden" id="provider_id" name="provider_id"  class="form-control" value="<%= current_provider.id %>">
      </div>

      <div class="form-group">
        <label for="name" class="control-label">
          Family Name
        </label>

        <input type="text" id="name" name="name" placeholder="Family Name" class="form-control" 
      </div>

      <button class="btn btn-success">
        Create Family
      </button>
      or
      <a href="/families">Cancel</a>
    </form>
  </div>
</div>
