<div class="page-header">
  <h1>
    Families
    <a href="/families/new" class="btn btn-lg btn-success">New Family</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <% @families.each do |family| %>

    <% if family.provider_id == current_provider.id %>
    <div>
      <h3><%= family.name %> Family <a href="/families/<%= family.id %>" class="btn btn-primary">Show</a> <a href="/families/<%= family.id %>/edit" class="btn btn-warning">Edit</a>     <a href="/delete_family/<%= family.id %>" class="btn btn-danger" rel="nofollow">Delete</a></h3>
    </div>

    <h5>Children   <a href="/children/new" class="btn btn-success">New Child</a></h5>
    <table class="table table-striped table-hover">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>

      <% family.children.each do |child| %>

      <tr>
        <td> <%= child.first_name %> </td>
        <td> <%= child.last_name %> </td>
        <td>
          <a href="/children/<%= child.id %>" class="btn btn-primary">Show</a>
        </td>
        <td>
          <a href="/children/<%= child.id %>/edit" class="btn btn-warning">Edit</a>
        </td>
        <td>
          <a href="/delete_child/<%= child.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>

       <% end %> <!--close loop: print all children in this family -->
    </table>

    <h5>Guardians <a href="/guardians/new" class="btn btn-success">New Guardian</a> </h5>
    <table class="table table-striped table-hover">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>

      <% family.guardians.each do |guardian| %>

      <tr>
        <td> <%= guardian.first_name %></td>
        <td><%= guardian.last_name %> </td>
        <td>
          <a href="/guardians/<%= guardian.id %>" class="btn btn-primary">Show</a>
        </td>
        <td>
          <a href="/guardians/<%= guardian.id %>/edit" class="btn btn-warning">Edit</a>
        </td>
        <td>
          <a href="/delete_guardian/<%= guardian.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>

      <% end %> <!--close loop: print all guardians in this family -->
    </table>




     <% end %> <!--end looping through all families -->


<% end %>

</div>
</div>
